<%- include('../masterpage/main-header') -%>

	<div class="container">

		<div class="block-header">
			<h2>
				<%= titulo %>
			</h2>

			<ul class="actions">
				<li>
					<a href="#">
						<i class="zmdi zmdi-trending-up"></i>
					</a>
				</li>
				<li>
					<a href="#">
						<i class="zmdi zmdi-check-all"></i>
					</a>
				</li>
				<li class="dropdown">
					<a href="#" data-toggle="dropdown">
						<i class="zmdi zmdi-more-vert"></i>
					</a>

					<ul class="dropdown-menu dropdown-menu-right">
						<li>
							<a href="#">Refresh</a>
						</li>
						<li>
							<a href="#">Manage Widgets</a>
						</li>
						<li>
							<a href="#">Widgets Settings</a>
						</li>
					</ul>
				</li>
			</ul>

		</div>


		<div class="card">

			<div class="card-body card-padding">
				<div class="row">

					<div class="col-sm-3 m-b-20">

						<p class="c-black f-500 m-b-15">Fecha:</p>

						<div class="input-group form-group">
                        	<span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="dtp-container fg-line">
								<input type='text' class="form-control date-picker" placeholder="dd/mm/aaaa">
                            </div>
                        </div>

					</div>
					
					<div class="col-sm-3 m-b-20">
						
						<p class="c-black f-500 m-b-15">Operario:</p>

						<div class="input-group form-group">
                        	<span class="input-group-addon"><i class="zmdi zmdi-accounts"></i></span>
                            <div class="dtp-container fg-line">
								<select class="selectpicker" data-live-search="true">
									<option>Todos</option>
									<option>Nombre de operario 1</option>
									<option>Nombre de operario 2</option>
									<option>Nombre de operario 3</option>
									<option>Nombre de operario 4</option>
									<option>Nombre de operario 5</option>							
								</select>
							</div>
                        </div>


					</div>

				</div>
			</div>
		</div>


	</div>

	<%- include('../masterpage/main-footer') -%>